/* pages/pay/pay.wxss */
.pay{
  background: #F7F8FC;
  width: 100%;
  height: 100%;
  position: fixed;
}
.pay-top{
  width: 714rpx;
  text-align: center;
  height: 364rpx;
  background: white;
  border-radius: 20rpx;
  margin: 0 auto;
  margin-top: 15rpx;
}
.pay-top view:nth-child(1){
  height: 160rpx;
}
.pay-top view:nth-child(1) cover-image{
  width: 82rpx;
  height: 82rpx;
  position: relative;
  top: 62rpx;
  left: 243rpx;
  
}
.pay-top view:nth-child(1) text{
  color: #333333;
font-size: 28rpx;
position: relative;
left: 63rpx;

}
.pay-top view:nth-child(2) text:nth-child(1){
  color: #333333;
  font-size: 24rpx;
}
.pay-top view:nth-child(2) text:nth-child(2){
  color: #333333;
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 41rpx;
}
.pay-top view:nth-child(3) text:nth-child(1){
  color: #333333;
  font-size: 24rpx;
}
.pay-top view:nth-child(3) text:nth-child(2){
  color: #FFBB48;
  font-size: 34rpx;
  margin-left: 49rpx;
}
.pay-content{
  height: 246rpx;
  width: 714rpx;
  border-radius: 20rpx;
  margin: 0 auto;
  background:white;
  margin-top: 15rpx;
}
.pay-content view:nth-child(1) cover-image{
  width: 48rpx;
  height: 48rpx;
}
.pay-content view:nth-child(1) cover-image:nth-child(2){
  width: 36rpx;
  height: 36rpx;
}
.pay-content view:nth-child(2) cover-image{
  width: 48rpx;
  height: 48rpx;
}
.pay-content view:nth-child(1) text{
  font-size: 30rpx;
color: #222222;
position: relative;
left: 132rpx;

}
.pay-content view:nth-child(2) text{
  font-size: 30rpx;
  color: #999999;
  position: relative;
left: 129rpx;

}
.pay-bottom{
  width: 100%;
  height: 98rpx;
  background: #20CD88;
  text-align: center;
  line-height: 98rpx;
  color: white;
  font-size: 30rpx;
  position: fixed;
  bottom: 0px;
}
.pay-bottom text{
  height: 100%;
display: block;
width: 129rpx;
margin: 0 auto;
}
.pay-top view:nth-child(2){
  height: 89rpx;
line-height: 98rpx;

}
.pay-top view:nth-child(3){
  height: 60rpx;
line-height: 59rpx;

}
.pay-content view{
  display: flex;
line-height: 123rpx;
height: 123rpx;
text-align: center;
border-bottom: 1px solid #EEEEEE;
}
.pay-content view:nth-child(2){
  border-bottom:0px solid red;
}
