    <view>
      <text class="courseClick-content-text1">¥700</text>
      <text class="courseClick-content-text2">¥899</text>
    </view>
    <view>
      <text class="courseClick-content-text3">销量：178件</text>
    </view>
  </view>
  <!--  -->
  <view class="courseClick-h3">
    <text>名师一对一辅导</text>
    <text>提供课程回看服务</text>
  </view>
  <!--  -->
